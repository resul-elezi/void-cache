{
  "manifest_version": 3,
  "name": "VoidCache",
  "version": "1.0",
  "description": "A simple browser extension to clear cache with one click.",
  "permissions": ["browsingData"],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_title": "Clear Cache",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
